#scroller .scrolly
	max-width 60rem
	margin 3rem auto
	background-color #ddd
	// background-image: linear-gradient(#ddd, #888)
	padding 1rem

	article
		padding 1rem
		max-width 30rem
		margin 0 auto
		position relative

		.step
			min-height 67vh
			margin-bottom 1rem
			&:last-of-type
				margin-bottom 0
			&.is-active
					p
						opacity 0.9
						// background-color $secondary
			p
				margin 0
				padding 1rem
				text-align left
				font-family $sans
				font-weight 400
				background-color #fff
				opacity 0
				// transition background-color 250ms ease-in-out
				transition opacity 1000ms ease
				color #222
				set-type-size(medium)
				

	figure.sticky
		position sticky
		
		background #fff 
		// border 2px solid #666
		margin 0
		top 1rem

		width 100%
		// see https://stackoverflow.com/questions/1495407/maintain-the-aspect-ratio-of-a-div-with-css
		padding-bottom 66.66% // 3:2 aspect ratio
		
		.figure-container
			display none
			position absolute
			top 0
			bottom 0
			left 0
			right 0

		.figure-container.active
			display block
