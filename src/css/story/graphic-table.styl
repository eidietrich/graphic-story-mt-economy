$breakpoint-alpha = 480px

#graphic-table
    margin 0.25rem 0.5rem
    
    font-size 10px
    // color red

    @media (min-width: $breakpoint-alpha) // larger screens
    //     // color blue
        font-size 12px
        td 
            padding: 0.5rem 0.5rem
    
    .graphic
        width 100%
	    height 100%
    .rwd-table
        width 100%
        // min-width 300px
    .rwd-table tr 
        border-top: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
    .rwd-table th 
        display none
    .rwd-table td 
        display block
        &:first-child
            padding-top 0.5rem
        &:last-child
            padding-bottom 0.5rem
        &:before
            content attr(data-th)
            font-weight bold
            width 20em
            display inline-block
            @media(min-width $breakpoint-alpha)
                display: none
    .rwd-table th, .rwd-table td
        text-align left
        @media(min-width $breakpoint-alpha)
            display table-cell
            padding .25rem .5rem
            &:first-child
                padding-left 0
            &:last-child
                padding-right 0

    .pretty-table.normal 
        table-layout fixed
        // width: 90%
    .sector
        // width: 40%
    
    .pretty-table.normal th,
    .pretty-table.normal td 
        padding 3px 2px
        overflow: hidden;
        text-overflow: ellipsis;
    
    .pretty-table th,
    .pretty-table td 
        // vertical-align top
    
    .pretty-table thead th 
        text-transform uppercase
        font-weight 500
    
    .pretty-table thead th.column-type-number string 
        // order 1
    
    .pretty-table th.sortable 
        // cursor pointer
    
    .pretty-table thead th.column-type-number,
    .pretty-table tbody td.cell-type-number,
    .pretty-table tbody td.cell-rank 
        @media(min-width $breakpoint-alpha)
            text-align right
    
    .pretty-table tbody td.cell-type-number,
    .pretty-table tbody td.cell-rank 
        font-family $sans
        // font-size 90%
    
    .pretty-table tbody td.cell-rank 
        // padding-right 1em
        // color #666
    

