{{#each copy.sections}}
<section id='{{id}}'>
	{{#ifEquals id 'scrolly-side'}} {{> story/scrolly-side}} {{/ifEquals}}
	{{#ifEquals id 'scrolly-overlay'}} {{> story/scrolly-overlay}} {{/ifEquals}}
	{{#ifEquals id 'scroller'}} {{> story/scroller}} {{/ifEquals}}
	<div class='prose'>
		{{#if hed}}
		<h3 class='prose__hed tk-atlas'>
			<strong>{{{hed}}}</strong>
		</h3>
		{{/if}}
		{{#each text}}
		<p>{{{value}}}</p>
		{{/each}}
	</div>
	 {{#ifEquals id 'code-html'}} <pre data-src='assets/prism/code.html'></pre> {{/ifEquals}}
	 {{#ifEquals id 'code-css'}} <pre data-src='assets/prism/code.css'></pre> {{/ifEquals}}
	 {{#ifEquals id 'code-js'}} <pre data-src='assets/prism/code.js'></pre> {{/ifEquals}}
</section>
{{/each}}
