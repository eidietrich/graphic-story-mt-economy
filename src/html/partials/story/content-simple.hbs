    <div class='prose'></div>
        <h3 class='graphic__hed tk-atlas'>
            <strong>{{{copy.graphics.0.hed}}}</strong>
        </h3>
    </div>
    {{/if}}
    <div class='figure-container'>
        {{> story/mt-economy-1-overview}}
