<section id='intro'>
	<div class='prose'>
		{{#if copy.intro.hed}}
		<h3 class='prose__hed tk-atlas'>
			<strong>{{{copy.intro.hed}}}</strong>
		</h3>
		{{/if}}
		{{#each copy.intro.text}}
		<p>{{{value}}}</p>
		{{/each}}
	</div>
</section>

